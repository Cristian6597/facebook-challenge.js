<%- include("./components/header") %>
<% if (result) { %>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= result.title %></h5>
            <p class="card-text"><%= result.article %></p>
            <a href=/edit-article/<%= result._id %> class="btn btn-primary">Update</a>
            <a href=/delete-article/<%= result._id %> class="btn btn-warning">Delete</a>
        </div>
    </div>
<% } else { %>
    <p>There are no records</p>
<% } %>

